<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:typeface="serif"
    tools:context="cn.edu.zucc.zql.teachingmaterialmanager.AddClassUserSingleActivity" >

    <include layout="@layout/commom_title"/>
    
    <LinearLayout 
        android:id="@+id/addClassUserMultyLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_weight="1"
	        android:gravity="center"
            android:text="学生文件:"/>

        <EditText
            android:id="@+id/addClassUserMultyFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:enabled="false"
            android:singleLine="true" />

        <Button 
            android:id="@+id/addClassUserMultyChooseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomButton"
            android:layout_weight="1"
            android:text="@string/choose"
            />
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/addClassUserMultyConfirmLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/addClassUserMultyLayout"
	    android:layout_marginTop="40dp"
	    android:gravity="center">
	    <Button 
	        android:id="@+id/addClassUserMultyConfirmButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/CustomButton"
	        android:text="@string/confirm"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:id="@+id/addClassUserSingleLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="40dp"
	    android:layout_below="@id/addClassUserMultyConfirmLayout">
	    <TextView 
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:textColor="#000"
	        android:gravity="center"
	        android:text="@string/studentId"/>
	    <EditText 
	        android:id="@+id/addClassUserSingleStudentid"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:maxLength="6"
	        android:inputType="number"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/addClassUserSingleLayout"
	    
	        android:layout_marginTop="40dp"
	    android:gravity="center">
	    <Button 
	        android:id="@+id/addClassUserSingleConfirmButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/CustomButton"
	        android:text="@string/confirm"/>
	</LinearLayout>
	
	
</RelativeLayout>
